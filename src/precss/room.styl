.room__slider
  margin 2em 0 1em 0
  xs-block({
    margin: 0 1em 1em 1em
  })
.big__carousel
  .owl-nav
    .owl-prev
      left: -5px
    .owl-next
      right: -5px
    .owl-next, .owl-prev
      position: absolute
      top calc(50% - 13px)
      span
        transition: all 300ms ease
        padding 6px 16px
        font-size rem(22px)
        color $mainColor
        background-color: #fff
      &:hover
        cursor: pointer
.thumbs__carousel
  .owl-item
    &:after
      position: absolute
      content ""
      top: 0
      left: 0
      bottom: 0
      right: 0
      opacity 0
      transition: all 300ms ease
      visibility hidden
      border 4px solid $activeTextColor
    &.current
      &:after
        opacity 1
        visibility visible
  .owl-nav
    .owl-next, .owl-prev
      top calc(50% - 18px)
      span
        padding: 2px 12px
.room__text
  margin 1em 0
.sb__title
  font-family: 'Playfair Display'
  font-size rem(20px)
  margin  0 0 15px 0
.sb__room
  display: flex
  &:hover
    .text
      transition: all 300ms ease
      border-top 1px solid $activeTextColor
      border-right 1px solid $activeTextColor
      border-bottom 1px solid $activeTextColor
  .img
    line-height 0
  .text
    padding 0 0 0 10px
    flex-grow 1
    border-top 1px solid #ffffff
    border-right 1px solid #ffffff
    border-bottom 1px solid #ffffff
    .name
      font-family: 'Playfair Display'
      font-size rem(17px)
      color $textColor
      &:hover
        color $activeTextColor
    .price
      margin 5px 0 0 0
      color: #b1b1b1
