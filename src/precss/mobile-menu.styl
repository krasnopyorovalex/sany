.burger-mob
  position: relative
  display: none
  width: 31px
  height: 16px
  md-block({
    display: block
  })
  span
    position: absolute
    display: block
    width: 100%
    height: 2px
    top: calc(50% - 1px)
    left: 0
    background-color: #2b2b2b
  &:before, &:after
    position: absolute;
    content: '';
    display: block
    width: 100%
    height: 2px
    background-color: #2b2b2b
  &:after
    right: 0
    bottom: 0
    width: 20px
.mobile__menu
  background-color: #373737
  display: none
  position fixed
  top: 0
  right: 0
  bottom: 0
  left: 5em
  z-index 30
  padding 1em 0
  ul > li
    display: block
    position: relative
    overflow hidden
    &.has__child
      >span
        position: absolute
        right: 0
        top: 0
        padding .75em 1em
        border-left 1px solid rgba(126,183,28,.3)
        .icon__arrow
          display: inline-block
          sprite($icon_arrow_menu_mob_down)
      ul
        display: none
        li
          &:last-child
            border none
          a
            padding-left: 2.5em
            font-size rem(12px)
    a
      border-bottom: 1px solid rgba(126,183,28,.3)
      padding 12px 1.5em
      text-transform: uppercase
      display: block
      color #ffffff
  .socials
    margin 2em 0 0 1.5em
    text-align: left
    > a + a
      margin-left: .8em
    .icon
      width: 18px
      height: 18px
  &.is__opened
    .menu-overlay-mob
      opacity 1;
.menu-overlay-mob
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100vh
  background-color: rgba(28,28,28,0.7)
  z-index: -1
  opacity 0
.close-menu-btn
  position: absolute
  top: 1em
  left: -50px
  width: 15px
  height: 15px
  &:before, &:after
    position: absolute
    content: ''
    width: 25px
    height: 2px
    top: calc(50% - 1px)
    left: -5px
    background-color: #ffffff
  &:before
    transform rotate(45deg)
  &:after
    transform rotate(-45deg)
