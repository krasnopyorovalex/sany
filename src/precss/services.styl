.services
  padding 3em 0
  xs-block({
    padding: 1em 0
  })
  .col-4, .col-3
    md-block({
      padding: 0 10px
      margin-bottom: 1em
    })
  .name
    a
      font-family: 'Playfair Display'
      color $textColor
      &:hover
        color $activeTextColor
  .btn__more
    font-size rem(14px)
    position: relative
    text-transform: uppercase
    color $textColor
    font-weight bold
    &:after
      opacity 0
      transition: all 300ms ease
      content ""
      position: absolute
      height 1px
      width: 100%
      bottom: -2px
      left: 0
      background-color: $activeTextColor
     &:hover
       color: $activeTextColor
       &:after
        opacity 1
.btn__see-all
  margin 2em 0 1em 0
