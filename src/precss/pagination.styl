.pagination
  text-align: center
  margin 1em 0
  ul
    li
      display: inline-block
      &.active
        a, span
          color: $textColor
      a, span
        border: 1px solid #d9d6d6
        padding 5px 16px
        color: #6c6c6c
        font-size: rem(18px)
        font-weight: 400
        &:after
          display: none
        &:hover
          color: $textColor
