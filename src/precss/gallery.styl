.gallery
  padding 3em 0 0 0
  background-color: #f8f8f8
  .title
    display: block
    text-align: center
.gallery__box
  display: flex
  flex-wrap: wrap
  align-content center
  figure
    position: relative
    box-sizing border-box
    flex-basis 20%
    xs-block({
      flex-basis: 50%
    })
    &:after
      background-color: rgba(0, 0, 0, 0.5)
      position: absolute
      content ""
      top: 0
      bottom: 0
      right: 0
      left: 0
      transition: all 300ms ease
      opacity 0
    img
      height: 100%
    .icon
      transition: all 300ms ease
      width: 60px
      height: 60px
      display: inline-block
      fill: #fff
      position: absolute
      top: calc(50% - 30px)
      left: calc(50% - 30px)
      background-color: $activeTextColor
      padding 18px
      border-radius 50%
      opacity 0
      z-index 10
      cursor: pointer
    &:hover
      &:after
        opacity 1
      .icon
        opacity 1
.gallery__filter
  text-align: center
  margin 2em auto
  ul
    li
      position: relative
      display: inline-block
      padding 8px 25px
      margin: 0 .5em
      xs-block({
        margin: 0.2em 2em
        display: block
      })
      &:not(.active)
        xs-block({
          display: none
        })
      &:hover
        cursor: pointer
      &:after
        position: absolute
        content ""
        transition all .3s ease
        transform skewX(-30deg)
        left: 50%
        width: 0
        background-color: $activeTextColor
        top: 0
        height: 100%
        z-index -1
      &:before
        display: none
      &.active
        color #ffffff
        &:after
          width: 100%
          left: 0
    &.is__opened
      li
        xs-block({
          display: block
        })
